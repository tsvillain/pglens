{
  "name": "pglens",
  "version": "2.2.0",
  "description": "A simple PostgreSQL database viewer tool",
  "main": "electron/main.js",
  "bin": {
    "pglens": "./bin/pglens"
  },
  "scripts": {
    "start": "node bin/pglens",
    "electron:start": "electron .",
    "electron:build": "electron-builder",
    "dist": "npm run electron:build",
    "dist:mac": "electron-builder --mac",
    "dist:win": "electron-builder --win",
    "dist:linux": "electron-builder --linux"
  },
  "keywords": [
    "postgresql",
    "database",
    "viewer",
    "cli"
  ],
  "author": {
    "name": "Tekeshwar Singh",
    "email": "tekeshwarsingh2000@gmail.com",
    "url": "https://github.com/tsvillain"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tsvillain/pglens.git"
  },
  "build": {
    "appId": "com.tsvillain.pglens",
    "productName": "pglens",
    "electronLanguages": [
      "en"
    ],
    "compression": "maximum",
    "directories": {
      "output": "dist"
    },
    "files": [
      "package.json",
      "electron/**/*",
      "src/**/*",
      "client/**/*",
      "bin/**/*",
      "!**/*.{md,map,ts}",
      "!**/test/**",
      "!**/tests/**",
      "!**/docs/**"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "electron/assets/icon.png",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "icon": "electron/assets/icon.png",
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "icon": "electron/assets/icon.png",
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "publish": {
      "provider": "github",
      "owner": "tsvillain",
      "repo": "pglens"
    }
  },
  "bugs": {
    "url": "https://github.com/tsvillain/pglens/issues"
  },
  "homepage": "https://github.com/tsvillain/pglens#readme",
  "license": "MIT",
  "dependencies": {
    "commander": "^11.1.0",
    "cors": "^2.8.5",
    "electron-updater": "^6.1.7",
    "express": "^4.18.2",
    "postgres": "^3.4.3"
  },
  "devDependencies": {
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0"
  }
}
